<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fpstextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="8fps"
            android:textColor="@color/front_black"
            android:textSize="16sp"
            android:visibility="gone" />


        <SeekBar
            android:id="@+id/fpsProgress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fpstextview"
            android:max="24"
            android:maxHeight="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progress="10"
            android:thumbOffset="2dip"
            android:visibility="gone"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/live_play_selector" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp"
                android:text="12:11/60:00"
                android:textColor="@color/front_black"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/sbProgressNew"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="60"
                android:maxHeight="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:progress="30"
                android:thumbOffset="2dip"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/title_layout">

        <SurfaceView
            android:id="@+id/imgLive"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

    </FrameLayout>


</RelativeLayout>